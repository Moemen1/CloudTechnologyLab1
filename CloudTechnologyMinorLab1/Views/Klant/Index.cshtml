@model List<Klant>
@{
    ViewData["Title"] = "Overzicht";
}

<h2>Overzicht klanten</h2>

<div class="container">
    <div class="row">
       
        <table class="table">
            <thead>
                <tr>
                    <th>Naam</th>
                    <th>Achternaam</th>
                    <th>Leeftijd</th>
                </tr>
            </thead>

            @foreach (Klant item in Model)
            {
                <tbody>

                    <tr>
                        <td> <a asp-action="Producten" asp-route-id="@item.Naam">@item.Naam</a></td>
                        <td>@item.Achternaam</td>
                        <td>@item.Leeftijd</td>

                        @*@foreach (Product product in item.products)
                    {
                        <td>@product.Naam</td>
                        <td>@product.Storage</td>
                    }*@
                    </tr>
                </tbody>
            }
        </table>          
    </div>  
</div>